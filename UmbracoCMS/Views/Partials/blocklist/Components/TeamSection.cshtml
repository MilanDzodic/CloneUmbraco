@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
  var content = (ContentModels.TeamSection)Model.Content;
  var teamlist = content.TeamMemberList;
}

<section class="py-[4rem] bg-neutral">
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex flex-col items-center">
      <h2 class="text-[.875rem] text-secondary font-bold uppercase">@content.TeamLabel</h2>
      <div class="font-bold text-primary">@Html.Raw(content.TeamTitle)</div>
    </div>
      <div class="flex flex-wrap gap-y-5 pt-5 pb-5 -mx-2">
        @if (teamlist != null)
      {
        for(var i = 0; i < teamlist.Count; i++)
        {
          var member = teamlist[i];
          var colClass = i < 3 ? "w-1/3" : "w-1/4";

          <div class="@colClass px-2">
            <partial name="Partials/Blocklist/Components/TeamMember" model="member" />
          </div>
        }
      }
    </div>
      

  </div>
</section>
